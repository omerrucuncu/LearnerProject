@model List<LearnerProject.Models.Entities.Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3>Admins</h3>
<br />

@{
    int count = 0;
}
<table class="table table-bordered table-hover">

    <tr>
        <th style="text-align : center ; align-content : center ; font-weight : bold">#</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Name Surname</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">UserName</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Password</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">ImageUrl</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Status</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Update</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Active - Inactive</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@count</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.NameSurname</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.UserName</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Password</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.ImageUrl</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Status</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">

                @*<a href="/Admin/DeleteAdmin/@item.AdminId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Delete</a>*@
                <a href="/AdminAdmin/UpdateAdmin/@item.AdminId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-info"><i class="fa fa-pen"></i> Update</a>
            </td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">
                <a href="/AdminAdmin/MakeActive/@item.AdminId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-success"><i class="fas fa-check"></i> Make Active</a>

                <a href="/AdminAdmin/MakeInactive/@item.AdminId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-warning"><i class="fa fa-lock"></i> Make Inactive</a>
            </td>
        </tr>
    }

</table>
<br />
<a href="/AdminAdmin/AddAdmin" class="btn btn-outline-primary"><i class="fas fa-plus-square"></i> Add New Admin</a>