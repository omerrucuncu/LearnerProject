@model List<LearnerProject.Models.Entities.Club>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3>Clubs</h3>
<br />

@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    
    <tr>
        <th style="text-align : center ; align-content : center ; font-weight : bold">#</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Club Name</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Icon</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Description</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Status</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Update</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Active - Inactive</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@count</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Name</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Icon</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Description</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Status</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">

                @*<a href="/Club/DeleteClub/@item.ClubId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Delete</a>*@
                <a href="/AdminClub/UpdateClub/@item.ClubId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-info"><i class="fa fa-pen"></i> Update</a>
            </td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">
                <a href="/AdminClub/MakeActive/@item.ClubId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-success"><i class="fas fa-check"></i> Make Active</a>

                <a href="/AdminClub/MakeInactive/@item.ClubId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-warning"><i class="fa fa-lock"></i> Make Inactive</a>
            </td>
        </tr>
    }

</table>
<br />
<a href="/AdminClub/AddClub" class="btn btn-outline-primary"><i class="fas fa-plus-square"></i> Add New Club</a>