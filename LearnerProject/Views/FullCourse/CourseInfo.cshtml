
@model List<LearnerProject.Models.Entities.Course>

<div class="untree_co-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-12 text-center" data-aos="fade-up" data-aos-delay="0">
                <h2 class="line-bottom text-center mb-4">Recently Added Courses</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {


                <div class="col-12 col-sm-6 col-md-6 col-lg-4 mb-4 mt-4 mb-lg-0">
                    <div class="custom-media">
                        <a href="#"><img src="@item.ImageUrl" alt="Image" class="img-fluid"></a>
                        <div class="custom-media-body">
                            <div class="d-flex justify-content-between pb-3">
                                <div class="text-primary"><span class="uil uil-book-open"></span> Active Courses : <span>@ViewBag.v1</span></div>
                                <div class="review">
                                    <span class="icon-star"></span>
                                    @{
                                        var reviews = item.Reviews.Where(x => x.CourseId == item.CourseId).ToList();
                                        var averageReview = reviews.Any() ? reviews.Average(x => x.ReviewValue).ToString("0.0") : "Değerlendirme Yok";
                                    }
                                    <span>@averageReview</span>
                                </div>
                            </div>
                            <h3>@item.CourseName</h3>
                            <p class="mb-4">@item.Description.Substring(0, Math.Min(90, @item.Description.Length))@(item.Description.Length > 90 ? "..." : "")</p>
                            <div class="border-top d-flex justify-content-between pt-3 mt-3 align-items-center">
                                <div><span class="price">£@item.Price</span></div>
                                <div><a href="/Default/CourseDetail/@item.CourseId">Course Detail</a></div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>