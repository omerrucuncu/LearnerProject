@model List<LearnerProject.Models.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3>Kategoriler</h3>
<br />
@{
    int count = 0;
}
<table class="table table-bordered table-hover">

    <tr>
        <th style="text-align : center ; align-content : center ; font-weight : bold">#</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Category Name</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Status</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Transactions</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Active - Inactive</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@count</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.CategoryName</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">
                <a href="/Category/DeleteCategory/@item.CategoryId" style="text-align : center ; align-content : center ; font-weight : bold"  class="btn btn-outline-danger"><i class="fa fa-trash"></i> Delete</a>
                <a href="/Category/UpdateCategory/@item.CategoryId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-info"><i class="fa fa-pen"></i> Update</a>
                <a href="/Category/MakeActive/@item.CategoryId" style="text-align : center ; align-content : center ; font-weight : bold" ></a>
                <a href="/Category/MakeInactive/@item.CategoryId" style="text-align : center ; align-content : center ; font-weight : bold"></a>
            </td>
        </tr>
    }

</table>
<br />
<a href="/Category/AddCategory" class="btn btn-outline-primary">Yeni Kategori Ekle</a>