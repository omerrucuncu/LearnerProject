@model List<LearnerProject.Models.Entities.Teacher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="untree_co-hero overlay" style="background-image: url('/Templates/learner-1.0.0/images/img-school-2-min.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">
                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">All Instructors</h1>
                        <div class="mb-5 text-white desc mx-auto" data-aos="fade-up" data-aos-delay="200">
                            <p>You can find information about our expert trainers below.</p>
                        </div>

                        <p class="mb-0" data-aos="fade-up" data-aos-delay="300"><a href="#" onclick="scrollToFullTeacher()" class="btn btn-secondary">View All Instructors</a></p>

                        <script>
                            function scrollToFullTeacher() {
                                var contactSection = document.getElementById('fullteacher');
                                contactSection.scrollIntoView({ behavior: 'smooth' });
                            }
                        </script>

                    </div>


                </div>

            </div>

        </div> <!-- /.row -->
    </div> <!-- /.container -->

</div> <!-- /.untree_co-hero -->




<div class="untree_co-section" id="fullteacher">
    <div class="container">

        <div class="mb-3">

            @Html.Action("TeacherInfo")
        </div>


    </div>
</div> <!-- /.untree_co-section -->
