@model List<LearnerProject.Models.Entities.FAQ>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3>FAQs</h3>
<br />

@{
    int count = 0;
}
<table class="table table-bordered table-hover">

    <tr>
        <th style="text-align : center ; align-content : center ; font-weight : bold">#</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Question</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Answer</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Image URL</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Status</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Update</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Active - Inactive</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@count</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Question</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Answer</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.ImageUrl</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Status</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">

                @*<a href="/FAQ/DeleteFAQ/@item.FAQId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Delete</a>*@
                <a href="/AdminFAQ/UpdateFAQ/@item.FAQId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-info"><i class="fa fa-pen"></i> Update</a>
            </td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">
                <a href="/AdminFAQ/MakeActive/@item.FAQId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-success"><i class="fas fa-check"></i> Make Active</a>

                <a href="/AdminFAQ/MakeInactive/@item.FAQId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-warning"><i class="fa fa-lock"></i> Make Inactive</a>
            </td>
        </tr>
    }

</table>
<br />
<a href="/AdminFAQ/AddFAQ" class="btn btn-outline-primary"><i class="fas fa-plus-square"></i> Add New FAQ</a>