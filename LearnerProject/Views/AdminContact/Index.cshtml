@model List<LearnerProject.Models.Entities.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3>Contacts</h3>
<br />

@{
    int count = 0;
}
<table class="table table-bordered table-hover">

    <tr>
        <th style="text-align : center ; align-content : center ; font-weight : bold">#</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Address</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Open Hours</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Email</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Phone</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Status</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Update</th>
        <th style="text-align : center ; align-content : center ; font-weight : bold">Active - Inactive</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@count</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Address</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.OpenHours</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Email</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Phone</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">@item.Status</td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">

                @*<a href="/Contact/DeleteContact/@item.ContactId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Delete</a>*@
                <a href="/AdminContact/UpdateContact/@item.ContactId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-info"><i class="fa fa-pen"></i> Update</a>
            </td>
            <td style="text-align : center ; align-content : center ; font-weight : bold">
                <a href="/AdminContact/MakeActive/@item.ContactId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-success"><i class="fas fa-check"></i> Make Active</a>

                <a href="/AdminContact/MakeInactive/@item.ContactId" style="text-align : center ; align-content : center ; font-weight : bold" class="btn btn-outline-warning"><i class="fa fa-lock"></i> Make Inactive</a>
            </td>
        </tr>
    }

</table>
<br />
<a href="/AdminContact/AddContact" class="btn btn-outline-primary"><i class="fas fa-plus-square"></i> Add New Contact</a>