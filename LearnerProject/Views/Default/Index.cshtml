
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


<div class="untree_co-hero overlay" style="background-image: url('/Templates/learner-1.0.0/images/öğrenci2.jpg');">


    <div class="container">
        <div class="row align-items-center justify-content-center">

            <div class="col-12">

                <div class="row justify-content-center ">

                    <div class="col-lg-6 text-center ">
                        <p class="caption mb-4 d-inline-block">Are You Ready to Meet Us?</p>

                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">Get Ready to Explore! The New Address for Meeting Knowledge - Learner</h1>
                        <p class="mb-0" data-aos="fade-up" data-aos-delay="300"><a href="/FullCourse/Index/" class="btn btn-secondary">View All Courses</a></p>

                    </div>
                </div>

            </div>

        </div> <!-- /.row -->
    </div> <!-- /.container -->

</div> <!-- /.untree_co-hero -->
<div id="category">
    @Html.Action("DefaultCategoryPartial")
</div>

<div id="teacher">
    @Html.Action("DefaultTeacherPartial")
</div>

<div id="classroom">
    @Html.Action("DefaultClubPartial")
</div>




@Html.Action("DefaultCoursePartial")

<div class="untree_co-section pt-0 bg-img overlay" style="background-image: url('/Templates/learner-1.0.0/images/student.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-lg-7">
                <h2 class="text-white mb-3" data-aos="fade-up" data-aos-delay="0">
                    If You Haven't Checked Out Our Trainings Yet...
                </h2>
                <p class="text-white h5 mb-4" data-aos="fade-up" data-aos-delay="100">
                    Learner offers students the opportunity to explore in-depth their areas of interest with its innovative approach that pushes the boundaries of education and its expert teaching staff.
                </p>
                <p><a href="#" class="btn btn-secondary" data-aos="fade-up" data-aos-delay="200">Browse All Courses</a></p>
            </div>
        </div>
    </div>
</div> <!-- /.untree_co-section -->


<div class="untree_co-section" id="about">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5 mb-5">


                @Html.Action("DefaultAboutPartial")
                <div class="row count-numbers col-lg-12 mb-5">
                    <div class="col-4 col-lg-3" data-aos="fade-up" data-aos-delay="0">
                        <span class="counter d-block">@ViewBag.v2<span>+</span></span>
                        <span class="caption-2">Students</span>
                    </div>
                    <div class="col-4 col-lg-3" data-aos="fade-up" data-aos-delay="100">
                        <span class="counter d-block">@ViewBag.v3<span>+</span></span>
                        <span class="caption-2">Teachers</span>
                    </div>
                    <div class="col-4 col-lg-3" data-aos="fade-up" data-aos-delay="100">
                        <span class="counter d-block">@ViewBag.v1<span>+</span></span>
                        <span class="caption-2">Courses</span>
                    </div>
                    <div class="col-6 col-lg-3" data-aos="fade-up" data-aos-delay="200">
                        <span class="counter d-block">@ViewBag.v4<span>+</span></span>
                        <span class="caption-2">Categories</span>
                    </div>

                </div>

                <p data-aos="fade-up" data-aos-delay="200">
                    <a href="#" class="btn btn-primary mr-1">All Courses</a>
                </p>
            </div>
            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="400">
                <div class="bg-1"></div>
                <a href="https://vimeo.com/342333493" data-fancybox class="video-wrap">
                    <span class="play-wrap"><span class="icon-play"></span></span>
                    <img src="~/Templates/learner-1.0.0/images/img-school-4-min.jpg" alt="Image" class="img-fluid rounded">
                </a>
            </div>
        </div>
    </div>
</div> <!-- /.untree_co-section -->


@Html.Action("DefaultTestimonialPartial")

<div id="faq">
    @Html.Action("DefaultFAQPartial")
</div>


<!-- /.untree_co-section -->
